<%- layout('layout/boilerPlate.ejs') %>
<body>
  <div
    class="signupform"
    style="
      border: 1px solid black;
      margin: auto;
      padding: 1rem;
      height: 60vh;
      background: linear-gradient(210deg, #ff0054, #820263);
    "
  >
    <form
      method="post"
      action="/signup"
      style="
        margin: auto;
        width: 25rem;
        margin-top: 0.6rem;
        box-shadow: 2px 2px 10px rgb(32, 32, 32);
        border-radius: 10px;
        padding: 2rem;
        padding-top: 1rem;
        background-color: rgb(255, 255, 255);
      "
    >
      <h2>
        <i
          style="
            font-size: 2rem;
            border: 1px solid black;
            border-radius: 50%;
            padding: 0.7rem;
            margin-right: 2rem;
          "
          class="fa-solid fa-user"
        ></i>
        SignUp for SHOP WELL
      </h2>
      <div style="display: flex; flex-direction: column; margin-top: 1rem">
        <label for="username" style="color: rgb(11, 0, 7)">
          <i
            class="fa-solid fa-user"
            style="font-size: 1.2rem; margin-right: 0.4rem"
          ></i>
          Username</label
        >
        <input
          type="text"
          id="username"
          name="username"
          placeholder="username"
          required
          style="
            padding: 0.6rem 1.5rem;
            border-radius: 10px;
            background-color: transparent;
            border: none;
            outline: none;
            border-bottom: 2px solid black;
            font-size: 1.1rem;
          "
        />
        <p
          class=""
          style="color: red; margin-top: 0; margin-bottom: 0; font-size: 0.9rem"
        >
          <%=error%>
        </p>
      </div>
      <div style="display: flex; flex-direction: column; margin-top: 1rem">
        <label style="color: rgb(11, 0, 7)" for="email">
          <i
            class="fa-solid fa-envelope"
            style="font-size: 1.2rem; margin-right: 0.4rem"
          ></i>
          Email</label
        >
        <input
          type="email"
          id="email"
          name="email"
          placeholder="email"
          required
          style="
            padding: 0.2rem 1.5rem;
            border-radius: 10px;
            background-color: transparent;
            border: none;
            outline: none;
            border-bottom: 2px solid black;
            font-size: 1.1rem;
          "
        />
      </div>
      <div style="display: flex; flex-direction: column; margin-top: 1rem">
        <label style="color: rgb(11, 0, 7)" for="password">
          <i
            class="fa-solid fa-key"
            style="font-size: 1.2rem; margin-right: 0.4rem"
          ></i>
          Password</label
        >
        <input
          type="password"
          id="password"
          name="password"
          placeholder="password"
          required
          style="
            padding: 0.6rem 1.5rem;
            border-radius: 10px;
            background-color: transparent;
            border: none;
            outline: none;
            border-bottom: 2px solid black;
            font-size: 1.1rem;
          "
        />
      </div>

      <button
        style="
          margin-top: 1.5rem;
          background-color: rgb(0, 0, 0);
          padding: 0.5rem 1.2rem;
          border-radius: 6px;
          border: none;
          border-bottom: 1px solid black;
          color: white;
        "
      >
        SignUp
      </button>
    </form>
  </div>
</body>
