<%- layout('layout/boilerPlate.ejs') %>
<body>
  <div
    class="loginform"
    style="
      border: 1px solid black;
      margin: auto;
      padding: 1rem;
      height: 60vh;
      background: linear-gradient(210deg, #ff0054, #820263);
    "
  >
    <form
      method="post"
      action="/login"
      style="
        margin: auto;
        width: 25rem;
        margin-top: 0.6rem;
        box-shadow: 2px 2px 10px rgb(32, 32, 32);
        border-radius: 10px;
        padding: 2rem;
        padding-top: 1rem;
        background-color: rgb(255, 255, 255);
      "
    >
      <%if(error && error.length){%>
      <p
        class=""
        style="
          width: 70%;
          font-size: 0.9rem;
          padding: 0.7rem 1rem;
          background-color: rgba(255, 0, 0, 0.534);
          border-radius: 10px;
        "
      >
        <%=error%>
      </p>
      <%}%>
      <h2>
        <i
          style="
            font-size: 2rem;

            padding: 0.7rem;
            margin-right: 2rem;
          "
          class="fa-solid fa-right-to-bracket"
        ></i>
        Login for SHOP WELL
      </h2>
      <div style="display: flex; flex-direction: column; margin-top: 1rem">
        <label for="username" style="color: rgb(11, 0, 7); font-size: 1.1rem"
          ><i
            class="fa-solid fa-user"
            style="font-size: 1.2rem; margin-right: 0.4rem"
          ></i>
          Username</label
        >
        <input
          type="text"
          id="username"
          name="username"
          placeholder="username"
          required
          style="
            padding: 0.6rem 1.5rem;
            border-radius: 10px;
            background-color: transparent;
            border: none;
            outline: none;
            border-bottom: 2px solid black;
            font-size: 1.1rem;
          "
        />
      </div>
      <div style="display: flex; flex-direction: column; margin-top: 1rem">
        <label style="color: rgb(11, 0, 7)" for="password"
          ><i
            class="fa-solid fa-key"
            style="font-size: 1.2rem; margin-right: 0.4rem"
          ></i>
          Password</label
        >
        <input
          type="password"
          id="password"
          name="password"
          placeholder="password"
          required
          style="
            padding: 0.6rem 1.5rem;
            border-radius: 10px;
            background-color: transparent;
            border: none;
            outline: none;
            border-bottom: 2px solid black;
            font-size: 1.1rem;
          "
        />
      </div>
      <button
        style="
          margin-top: 1.5rem;
          background-color: rgb(0, 0, 0);
          padding: 0.5rem 1.2rem;
          border-radius: 6px;
          border: none;
          border-bottom: 1px solid black;
          color: white;
        "
      >
        Login
      </button>
    </form>
  </div>
</body>
