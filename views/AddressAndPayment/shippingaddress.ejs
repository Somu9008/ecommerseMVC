<%-layout('/layout/boilerplate.ejs')-%>

<style>
  .address-payment {
    display: flex;
    /* border: 1px solid black; */
  }

  .shippingaddress {
    /* border: 1px solid black; */
    width: 65%;
    /* margin: auto; */
    margin: auto;
  }

  .shippingaddress h2 {
    text-align: center;
    margin: 0;
    margin-top: 1rem;
  }

  .shippingaddress form {
    margin: auto;
    /* border: 2px solid blue; */
    padding: 1rem;
  }

  .shippingaddress form button {
  }

  .shippingaddress form > div {
    /* border: 1px solid red; */
    display: flex;
    flex-direction: column;
    width: 90%;
    margin: auto;
    margin-bottom: 1rem;
  }

  .shippingaddress form .tq-cty {
    display: flex !important;
    /* border: 1px solid black; */
    flex-direction: row;
    justify-content: space-between;
  }

  .shippingaddress form .tq-cty div {
    width: 35% !important;
    /* border: 1px solid blue; */
  }

  .shippingaddress form .tq-cty div input {
    width: 85%;
  }

  .shippingaddress form div input {
    padding: 0.8rem 1rem;
    border-radius: 5px;
    /* border: none; */
    /* outline: none; */
  }

  .shippingaddress form div button {
    padding: 1rem 2rem;
    background-color: hsl(328, 100%, 51%);
    font-size: 1.2rem;
    color: white;
    border-radius: 7px;
    border: none;
  }

  .track-checkout {
    display: flex;
    width: 50%;
    margin: auto;
    justify-content: space-around;
    align-items: center;
    text-align: center;
    margin-top: 0;
    margin-bottom: 1rem;
  }

  .track-checkout div input[type="checkbox"] {
    border: 1px solid blue;
  }

  .track-checkout div input[type="checkbox"] {
    height: 1.5rem;
    width: 1.5rem;
    margin-top: 2rem;
  }

  .track-checkout .completed {
    background-color: rgb(137, 137, 137);
    height: 5px;
    width: 240px;
  }
</style>

<body>
  <div class="track-checkout">
    <div>
      <b>LoggegIn</b>
      <i
        style="font-size: 2rem; font-weight: 900; color: green"
        class="fa-regular fa-square-check"
      ></i>
    </div>
    <span class="completed" style="background-color: rgb(15, 154, 15)"></span>
    <div>
      <b>shipppinAddress</b>
      <i
        style="font-size: 2rem; font-weight: 900; color: green"
        class="fa-regular fa-square-check"
      ></i>
    </div>
    <span class="completed" style="background-color: rgb(85, 87, 85)"></span>
    <div>
      <b>Summery</b>
      <i
        style="font-size: 2rem; font-weight: 900; color: rgb(88, 88, 88)"
        class="fa-regular fa-square-check"
      ></i>
    </div>
  </div>
  <div class="address-payment">
    <div class="shippingaddress">
      <h2>Shipping Address</h2>
      <form method="post" action="/user/shippingaddress">
        <div>
          <input
            id="state"
            type="text"
            name="state"
            placeholder="state"
            required
          />
        </div>
        <div>
          <input
            id="dist"
            type="text"
            name="dist"
            placeholder="dist"
            required
          />
        </div>
        <div class="tq-cty">
          <div>
            <input
              id="taluq"
              type="text"
              name="taluq"
              placeholder="taluq"
              required
            />
          </div>
          <div>
            <input
              id="city"
              name="city"
              type="text"
              placeholder="city"
              required
            />
          </div>
          <div>
            <input
              id="pincode"
              name="pincode"
              type="number"
              placeholder="Pincode"
              required
            />
          </div>
        </div>

        <div>
          <input
            id="country"
            type="text"
            name="country"
            placeholder="country"
            required
          />
        </div>
        <div>
          <input
            id="mobileno"
            type="number"
            name="mobileno"
            placeholder="mobileno"
            required
          />
        </div>
        <div>
          <input
            id="area"
            name="area"
            type="text"
            placeholder="area"
            required
          />
        </div>
        <div>
          <button
            style="
              background: linear-gradient(
                123deg,
                rgb(255, 4, 109),
                rgb(163, 23, 163)
              );
              padding: 1rem 1.5rem;
              border: none;
              color: white;
              box-shadow: 2px 2px 3px rgb(82, 3, 44);
            "
          >
            Submit
          </button>
        </div>
      </form>
    </div>
    <div class="payment-methods">
      <div class="strip"></div>
      <div class="cashondelivery"></div>
      <div class="debitcart"></div>
    </div>
  </div>
</body>
