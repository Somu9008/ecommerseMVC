    padding: 1rem;
  
  }

  .orders{
    /* border-bottom: 2px solid red; */
    margin-bottom: 2rem;
    /* border: 1px solid rgb(0, 0, 0); */
    background-color: rgb(246, 246, 246);
    box-shadow: 2px 2px 8px rgb(61, 61, 61);
  }


  .orderItem{
    display: flex;
    align-items: center;
    justify-content: space-around;
    margin-top: 1rem;
  }

  .orderAddress{
    margin-bottom: 1rem;
    margin-left: 0rem;
    display: flex;
    align-items: start;
